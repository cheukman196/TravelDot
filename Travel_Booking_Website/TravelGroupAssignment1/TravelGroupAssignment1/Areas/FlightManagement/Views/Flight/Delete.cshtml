@using TravelGroupAssignment1.Areas.FlightManagement.Models;

@{
	Layout = "_FlightSearchItem";
}

@model Flight
@{
    ViewData["Title"] = "Delete Flight";

}
<h1>@ViewData["Title"]</h1>
<h3 class="card-title"> Are you sure you want to delete this flight? </h3>


<div class="card">
    <div class="card-body">



        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.FlightId)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.FlightId)

            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Airline)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Airline)

            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Price)

            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.MaxPassenger)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.MaxPassenger)

            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.From)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.From)

            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.To)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.To)

            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.DepartTime)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.DepartTime)

            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.ArrivalTime)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.ArrivalTime)

            </dd>

            <dt></dt>

        </dl>
        <!-- buttons for editing and -->
    </div>

</div>
<form asp-action="deleteConfirmed" method="post">
    @Html.HiddenFor(model => model.FlightId)
    <input asp-action="DeleteConfirmed" asp-route-flightId="@Model.FlightId " type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-warning">Cancel</a>


</form>