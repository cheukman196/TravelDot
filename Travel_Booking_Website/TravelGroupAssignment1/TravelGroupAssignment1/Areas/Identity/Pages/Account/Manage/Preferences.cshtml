@page
@model PreferencesModel
@{
    ViewData["Title"] = "Preferences";
    //["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Birthday" class="form-control"  />
                <label asp-for="Input.Birthday" class="form-label"></label>
                <span asp-validation-for="Input.Passport" class="text-danger"></span>

            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Passport" class="form-control"  />
                <label asp-for="Input.Passport" class="form-label"></label>
                <span asp-validation-for="Input.Passport" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Input.Gender" class="form-label"><br /></label>
                <select asp-for="Input.Gender" class="form-control">
                    <option value="">Select Gender</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Other">Other</option>
                </select>
                <span asp-validation-for="Input.Gender" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.HomeAirport" class="form-control" />
                <label asp-for="Input.HomeAirport" class="form-label"></label>
                <span asp-validation-for="Input.HomeAirport" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.SeatPreference" class="form-control"  />
                <label asp-for="Input.SeatPreference" class="form-label"></label>
                <span asp-validation-for="Input.SeatPreference" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.RewardProgramName" class="form-control"  />
                <label asp-for="Input.RewardProgramName" class="form-label"></label>
                <span asp-validation-for="Input.RewardProgramName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.RewardProgramNumber" class="form-control" />
                <label asp-for="Input.RewardProgramNumber" class="form-label"></label>
                <span asp-validation-for="Input.RewardProgramNumber" class="text-danger"></span>
            </div>


            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}