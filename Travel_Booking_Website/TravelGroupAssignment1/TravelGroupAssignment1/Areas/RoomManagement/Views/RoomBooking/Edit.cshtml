﻿@using TravelGroupAssignment1.Areas.RoomManagement.Models;


@model RoomBooking

@{
    ViewData["Title"] = "Edit Room Booking";
}

<h2>@ViewData["Title"]</h2>
<h3 class="card-title"> @ViewBag.Hotel?.HotelName: @ViewBag.Room?.Name</h3>

<form asp-action="Edit" method="post">
    <!-- Warning if input validation fails -->
    <div asp-validation-summary="ModelOnly" class="text-warning"></div>

    <div>
        <label asp-for="CheckInDate" class="control-label"></label>
        <input asp-for="CheckInDate" type="date" value="@Model.CheckInDate?.ToString("yyyy-MM-dd")" class="form-control" />
        <span asp-validation-for="CheckInDate" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="CheckOutDate" class="control-label"></label>
        <input asp-for="CheckOutDate" type="date" value="@Model.CheckOutDate?.ToString("yyyy-MM-dd")" class="form-control" />
        <span asp-validation-for="CheckOutDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        @Html.HiddenFor(model => model.RoomId)
        @Html.HiddenFor(model => model.Room)
        @Html.HiddenFor(model => model.BookingId)
        @Html.HiddenFor(model => model.BookingReference)
        <input type="submit" value="Edit" class="btn btn-primary" />
        <a asp-action="Index" asp-route-roomId="@Model.RoomId" class="btn btn-secondary">Return</a>
    </div>


</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}