@using TravelGroupAssignment1.Areas.RoomManagement.Models;


@model RoomBooking
@{
    ViewData["Title"] = "Room Booking Details";
}

<h2>@ViewData["Title"]</h2>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <img src="https://assets-global.website-files.com/5c6d6c45eaa55f57c6367749/65045f093c166fdddb4a94a5_x-65045f0266217.webp" class="img-fluid" alt="Hotel Room">
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h3 class="card-title">@Model.Room?.Hotel?.HotelName: @Model.Room?.Name</h3>

                    <dl class="row">
                        <dt class="col-sm-3">Hotel</dt>
                        <dd class="col-sm-9">@Model.Room?.Hotel?.HotelName</dd>

                        <dt class="col-sm-3">Capacity</dt>
                        <dd class="col-sm-9">@Model.Room?.Capacity</dd>

                        <dt class="col-sm-3">Bed Description</dt>
                        <dd class="col-sm-9">@Model.Room?.BedDescription</dd>

                        <dt class="col-sm-3">Room Size</dt>
                        <dd class="col-sm-9">@Model.Room?.RoomSize (sq ft)</dd>

                        <dt class="col-sm-3">Price per night</dt>
                        <dd class="col-sm-9">$@Model.Room?.PricePerNight</dd>

                        <dt class="col-sm-3">Amenities</dt>
                        <dd class="col-sm-9">@Model.Room?.Amenities</dd>
                    </dl>
                </div>
            </div>
            <div class="card">

                <!-- basic layout of project details -->
                <div class="card-body">
                    <h3 class="card-title">Booking Details</h3>

                    <dl class="row">
                        <dt class="col-sm-3">Booking ID</dt>
                        <dd class="col-sm-9">@Model.BookingId</dd>

                        <dt class="col-sm-3">Booking Reference</dt>
                        <dd class="col-sm-9">@Model.BookingReference</dd>

                        <dt class="col-sm-3">Room ID</dt>
                        <dd class="col-sm-9">@Model.RoomId</dd>

                        <dt class="col-sm-3">Check In Date</dt>
                        <dd class="col-sm-9">@Model.CheckInDate?.ToShortDateString()</dd>

                        <dt class="col-sm-3">Check Out Date</dt>
                        <dd class="col-sm-9">@Model.CheckOutDate?.ToShortDateString()</dd>


                    </dl>
                    @if (User.IsInRole("SuperAdmin") || User.IsInRole("Admin"))
                    {
                        <a asp-controller="RoomBooking" asp-action="Edit" asp-route-id="@Model.BookingId" class="btn btn-primary">Edit</a>
                        <a asp-controller="@ViewBag.Controller" asp-action="Index" asp-route-roomId="@Model.RoomId" class="btn btn-secondary">Return</a>
                    }
                    else
                    {
                        <a asp-controller="Trip" asp-action="Index" class="btn btn-secondary">Return</a>
                    }
                    

                </div>

            </div>
        </div>
    </div>
</div>


